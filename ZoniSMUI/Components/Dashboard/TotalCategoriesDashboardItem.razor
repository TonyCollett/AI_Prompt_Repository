@inject ICategoryData categoryData

<MudPaper Class="pa-4" Elevation="3">
    <MudStack AlignItems="AlignItems.Center">
        <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Primary" Size="Size.Large" />
        <MudText Typo="Typo.h6"> Total Categories </MudText>
        <MudText Typo="Typo.h4"> @totalCategories </MudText>
    </MudStack>
</MudPaper>

@code {
    private int totalCategories;

    protected async override Task OnInitializedAsync()
    {
        totalCategories = await categoryData.GetTotalCategoryCountAsync();
    }
}