@inject ITicketData ticketData

<MudPaper Class="pa-4" Elevation="3">
    <MudStack AlignItems="AlignItems.Center">
        <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Primary" Size="Size.Large" />
        <MudText Typo="Typo.h6"> Open Tickets </MudText>
        <MudText Typo="Typo.h4"> @openTickets </MudText>
    </MudStack>
</MudPaper>

@code {
    private int openTickets;

    protected async override Task OnInitializedAsync()
    {
        openTickets = await ticketData.GetOpenTicketCountAsync();
    }
}