@inject INotificationData notificationData
@inject AuthenticationStateProvider authProvider
@inject IUserData userData

<MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudText Typo="Typo.h4">My Notifications</MudText>
    @if (basicNotifications != null && basicNotifications.Any())
    {
        foreach (var notification in basicNotifications) {
            <MudText Typo="Typo.body1">@notification.Title</MudText>
        }
    }
    else {
        <MudText Typo="Typo.body1">No Notifications</MudText>
    }
</MudStack>

@code {
    User loggedInUser { get; set; }
    List<Notification> basicNotifications;

    protected async override Task OnInitializedAsync()
    {
        loggedInUser = await authProvider.GetUserFromAuth(userData);

        basicNotifications = null;
    }

}